  <body>
    <header>
    </header>
    <section>
        <%= yield %>
        <!-- index.hml.erb is rendered here -->
    </section>
    <aside>
      <div class="content">
        <h4>Pixel Happiness</h4>
        <p>Ricardo Vazquez is a UI/UX and Product Designer currently working on making the web world a better place, one gosh darn pixel at a time. Follow him <a href="http://www.twitter.com/iamrvazquez">@iamrvazquez</a>.
        </p>
        <h6>Articles</h6>
        <ol>
          <% blog.articles[0...10].each do |article| %>
            <li>
              <a href="<%= article.url %>"><%= article.title %></a>
              <span><%= article.date.strftime('%B %e') %></span>
            </li>
          <% end %>
        </ol>
    </div>
